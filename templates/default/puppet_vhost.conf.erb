# Generated by Chef (lol) for <%= node['fqdn'] %>
# Local modifications will be overridden
# You'll need to adjust the paths in the Passenger config depending on which OS
# you're using, as well as the installed version of Passenger.

<% case node['platform_family'] -%>
<% when 'debian' -%>
# Debian/Ubuntu:
LoadModule passenger_module /var/lib/gems/1.8/gems/passenger-<%= node['puppet']['passenger']['version'] -%>/ext/apache2/mod_passenger.so
PassengerRoot /var/lib/gems/1.8/gems/passenger-<%= node['puppet']['passenger']['version'] %>
PassengerRuby /usr/bin/ruby1.8
<% when 'rhel' -%>
# RHEL/CentOS:
LoadModule passenger_module /usr/lib/ruby/gems/1.8/gems/passenger-<%= node['puppet']['passenger']['version'] -%>/buildout/apache2/mod_passenger.so
PassengerRoot /usr/lib/ruby/gems/1.8/gems/passenger-<%= node['puppet']['passenger']['version'] %>
PassengerRuby /usr/bin/ruby
<% end -%>

# And the passenger performance tuning settings:
PassengerHighPerformance On
# Set this to about 1.5 times the number of CPU cores in your master:
#PassengerMaxPoolSize 12
PassengerMaxPoolSize <%= (node['cpu']['total'] * 1.5).ceil %>
# Recycle master processes after they service 1000 requests
PassengerMaxRequests 1000
# Stop processes if they sit idle for 10 minutes
PassengerPoolIdleTime 600

Listen 8140
<VirtualHost *:8140>
    SSLEngine On

    # Only allow high security cryptography. Alter if needed for compatibility.
    SSLProtocol             All -SSLv2
    SSLCipherSuite          HIGH:!ADH:RC4+RSA:-MEDIUM:-LOW:-EXP
    SSLCertificateFile      /var/lib/puppet/ssl/certs/<%= node['puppet']['client_conf']['main']['server'] %>.pem
    SSLCertificateKeyFile   /var/lib/puppet/ssl/private_keys/<%= node['puppet']['client_conf']['main']['server'] %>.pem
    SSLCertificateChainFile /var/lib/puppet/ssl/ca/ca_crt.pem
    SSLCACertificateFile    /var/lib/puppet/ssl/ca/ca_crt.pem
    SSLCARevocationFile     /var/lib/puppet/ssl/ca/ca_crl.pem
    SSLVerifyClient         optional
    SSLVerifyDepth          1
    SSLOptions              +StdEnvVars +ExportCertData

    # These request headers are used to pass the client certificate
    # authentication information on to the puppet master process
    RequestHeader set X-SSL-Subject %{SSL_CLIENT_S_DN}e
    RequestHeader set X-Client-DN %{SSL_CLIENT_S_DN}e
    RequestHeader set X-Client-Verify %{SSL_CLIENT_VERIFY}e

    DocumentRoot /usr/share/puppet/rack/puppetmasterd/public

    <Directory /usr/share/puppet/rack/puppetmasterd/>
      Options None
      AllowOverride None
      # Apply the right behavior depending on Apache version.
      <IfVersion < 2.4>
        Order allow,deny
        Allow from all
      </IfVersion>
      <IfVersion >= 2.4>
        Require all granted
      </IfVersion>
    </Directory>

    ErrorLog /var/log/httpd/<%= node['puppet']['client_conf']['main']['server'] %>_ssl_error.log
    CustomLog /var/log/httpd/<%= node['puppet']['client_conf']['main']['server'] %>_ssl_access.log combined
</VirtualHost>
